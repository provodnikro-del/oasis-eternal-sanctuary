    "start": "node dist/packages/server/index.js",
    "dev": "ts-node --skipProject --compiler-options '{\"module\":\"commonjs\",\"strict\":false}' packages/server/index.ts",
    "test": "jest --passWithNoTests",
    "typecheck": "tsc --noEmit"

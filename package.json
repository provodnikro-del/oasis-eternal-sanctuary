    "ts-node": "10.9.2",
    "typescript": "5.3.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": ["**/tests/**/*.test.ts"],
    "moduleNameMapper": {
      "^../shared-types$": "<rootDir>/packages/shared-types/index.ts",
      "^../shared-types/index$": "<rootDir>/packages/shared-types/index.ts",
      "^../runtime/config$": "<rootDir>/packages/runtime/config.ts",
      "^../runtime/logger$": "<rootDir>/packages/runtime/logger.ts"
    }
